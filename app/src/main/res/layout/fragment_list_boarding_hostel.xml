<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grayy"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="@dimen/size10dp"
        android:layout_marginBottom="@dimen/size4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="9"
            android:padding="@dimen/size10dp"
            android:textColor="@color/black"
            android:text="Danh Sách Dãy Trọ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/addBoardingByHost"
            android:layout_weight="1"
            android:src="@drawable/add"
            android:layout_width="@dimen/size30dp"
            android:layout_height="@dimen/size30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="5dp"
            android:layout_weight="7"
            android:id="@+id/listBoarding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progressBar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>
