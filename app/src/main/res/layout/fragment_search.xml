<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/imgsearch"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:letterSpacing="-0.02"
            android:text="@string/find_a_perfect_place_to_stay"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/backgroudconstrain"
        android:paddingTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="8"
                android:background="@drawable/ediiiboder"
                android:paddingLeft="10dp"
                android:textColor="@color/mauchusearch"
                android:gravity="center|start"
                android:textSize="20sp"
                android:hint="@string/txt_people" />
            <FrameLayout
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/ediiiboder"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_height="match_parent">
                <EditText
                    android:textColorHint="@color/mauchusearch"
                    android:background="@null"
                    android:id="@+id/guests"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/txt_guest" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center"
                    android:id="@+id/imgGuests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/arrow_down_float" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="8"
                android:background="@drawable/ediiiboder"
                android:paddingLeft="10dp"
                android:textColor="@color/mauchusearch"
                android:gravity="center|start"
                android:textSize="20sp"
                android:hint="@string/txt_price" />
            <FrameLayout
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/ediiiboder"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_height="match_parent">
                <EditText
                    android:textColorHint="@color/mauchusearch"
                    android:background="@null"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/edt_price" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center"
                    android:id="@+id/imgPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/arrow_down_float" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="8"
                android:background="@drawable/ediiiboder"
                android:paddingLeft="10dp"
                android:textColor="@color/mauchusearch"
                android:gravity="center|start"
                android:textSize="20sp"
                android:hint="@string/txt_area" />
            <FrameLayout
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/ediiiboder"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_height="match_parent">
                <EditText
                    android:textColorHint="@color/mauchusearch"
                    android:background="@null"
                    android:id="@+id/area"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/edt_area" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center"
                    android:id="@+id/imgArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/arrow_down_float" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="8"
                android:background="@drawable/ediiiboder"
                android:paddingLeft="10dp"
                android:textColor="@color/mauchusearch"
                android:gravity="center|start"
                android:textSize="20sp"
                android:hint="@string/txt_type" />
            <FrameLayout
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/ediiiboder"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_height="match_parent">
                <EditText
                    android:textColorHint="@color/mauchusearch"
                    android:background="@null"
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/edt_type" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center"
                    android:id="@+id/imgType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/arrow_down_float" />
            </FrameLayout>
        </LinearLayout>
        <Button
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="@string/btnselect"
            android:background="@drawable/radius_btn"
            android:id="@+id/btn_select"
            android:layout_width="336dp"
            android:layout_height="60dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>