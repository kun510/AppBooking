<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    app:cardCornerRadius="8dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/boderimg">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                app:cardCornerRadius="30dp"
                android:id="@+id/imgRoom"
                android:background="@drawable/boderhot"
                android:src="@drawable/detail"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:scaleType="centerCrop"
                android:layout_width="358dp"
                android:layout_height="184dp"/>
            <LinearLayout
                android:paddingTop="-10dp"
                android:layout_gravity="right"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:background="@android:color/transparent"
                    android:id="@+id/favourite"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/clickfavourite" />
            </LinearLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginEnd="3dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/addrRoom"
            android:alpha="0.7"
            android:textStyle="bold"
            android:textColor="@color/den"
            android:text="@string/tenroom"
            android:textSize="22sp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dateRoom"
            android:textColor="@color/xamne"
            android:text="@string/item_month"
            android:textSize="16sp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_gravity="right"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="8"
                android:layout_marginRight="10dp"
                android:text="@string/btn_select"
                android:background="@drawable/radius_btn"
                android:id="@+id/btn_selectRoom"
                android:layout_width="180dp"
                android:layout_height="60dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
