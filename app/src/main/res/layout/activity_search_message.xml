<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/size20dp"
            android:layout_marginTop="@dimen/size40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:padding="6dp"
            android:background="@drawable/round_back_light_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messages"
            android:textColor="#424242"
            android:textSize="@dimen/size18sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfilePic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="@dimen/size20dp"
            android:layout_marginTop="@dimen/size40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/profileeee"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editSearchMsg"
            android:background="@drawable/bg_chat_receive"
            android:layout_marginStart="@dimen/size20dp"
            android:layout_marginEnd="@dimen/size2dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Search..."
            android:padding="@dimen/size10dp"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_marginBottom="@dimen/size10dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/SearchMsg"
            android:layout_marginEnd="@dimen/size10dp"
            android:src="@drawable/baseline_search_24"
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/searchRecyclerView"
        />
</LinearLayout>