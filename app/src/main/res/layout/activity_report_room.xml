<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <Button
        android:background="@drawable/radius_btn"
        android:id="@+id/pickImageButton"
        android:layout_width="150dp"
        android:layout_height="@dimen/size50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Pick Images Report" />

    <Button
        android:background="@drawable/radius_btn"
        android:id="@+id/uploadButton"
        android:layout_width="120dp"
        android:layout_height="@dimen/size50dp"
        android:layout_below="@id/pickImageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Report" />
    <EditText
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/size30dp"
        android:gravity="center"
        android:textColorHint="@color/black"
        android:hint="@string/ReportR"
        android:id="@+id/contentReport"
        android:layout_below="@id/uploadButton"
        android:layout_marginStart="@dimen/size30dp"
        android:layout_marginEnd="@dimen/size30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:id="@+id/src_atop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/contentReport">
        <LinearLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
